#!/bin/bash

binpath=`dirname $0`
basepath=`dirname $binpath`
HOST=`hostname`

confFile=${basepath}/etc/remus.prop
if [ -e ${basepath}/etc/${HOST}.prop ]; then
    confFile=${basepath}/etc/${HOST}.prop
fi

if [ "x$1" != "x" ]; then
    confFile=$1
fi

java ${JAVA_OPTS} -Djava.ext.dirs=${basepath}/lib org.remus.Boot ${confFile}
